{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "strict": false, // Disable all strict type-checking options
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    }
  }
}
